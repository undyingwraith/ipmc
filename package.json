{
	"name": "ipmc",
	"version": "0.2.1",
	"main": "index.js",
	"license": "MIT",
	"private": true,
	"type": "module",
	"packageManager": "yarn@4.6.0",
	"scripts": {
		"dev": "yarn workspaces foreach -Api run dev",
